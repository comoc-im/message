{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "importHelpers": true,
    "noEmit": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "vite/client",
      "jest",
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
